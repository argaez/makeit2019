<% if @note %>
<form class="" action="/<%= @note.id %>" method="post" id="edit">
  <input type="hidden" name="_method" value="put"> <!--vamos a enviar informaciÃ³n oculta e identificque el metodo con _method por sintaxis -->
  <textarea name="content" rows="8" cols="80"><%= @note.content %></textarea>
  <input type="checkbox" name="complete" <%= "checked" if @note.complete %>> <!--checked es una propiedad del input checkbox-->
  <input type="submit">
  </form>
  <p><a href="/<%= @note.id %>/delete">Eliminar</a></p>
<% else %>
<p>Nota no encontrada o borrada de la base de datos.</p>
<% end %>
